{{#partial "htmlTitle"}}{{linkRelation.rel}} - {{service.name}}{{/partial}}

{{#partial "content"}}

<h1>{{linkRelation.rel}}</h1>
  
{{{linkRelation.descriptionMarkup}}}
  

{{#if linkRelation.jsonSchemaRef}}

<hr/>

<h2>Properties</h2>

<script src="{{docsContext.resourcesPath}}/lib/docson/widget.js" data-schema="{{linkRelation.jsonSchemaRef}}"></script>

{{/if}}


{{#if linkRelation.resourceRefs}}

<hr/>

<h2>Embedded resources</h2>

{{#each linkRelation.resourceRefs}}
<h3>{{this.name}}</h3>
{{#if this.shortDescription}}<p>{{this.shortDescription}}</p>{{/if}}
{{#if this.jsonSchemaRef}}
<script src="{{docsContext.resourcesPath}}/lib/docson/widget.js" data-schema="{{this.jsonSchemaRef}}"></script>
{{/if}}
{{/each}}

{{/if}}


{{#if linkRelation.linkRelationRefs}}

<hr/>

<h2>Link relations</h2>

<table class="table">
  <thead>
    <tr>
      <th>Link Relation</th>
      <th>Description</th>
      <th>Docs</th>
    </tr>
  </thead>
  <tbody>
    {{#each linkRelation.linkRelationRefs}}
    <tr>
      <td><a href="{{docsContext.baseUrl}}{{this.rel}}"><strong>{{this.rel}}</strong></a></td>
      <td>{{this.shortDescription}}</td>
      <td><a href="{{docsContext.baseUrl}}{{this.rel}}" title="Documentation"><i class="icon-book"></i></a></td>
    </tr>
    {{/each}}
  </tbody>
</table>

{{/if}}


{{/partial}}

{{> base.html.hbs}}
